<h1 class="white-text d-flex justify-content-center my-5"><%= t("todos.index.title") %></h1>

<%= turbo_frame_tag @todo do %>

  <div id="flash" class="mx-5 my-5">
    <%= render "shared/flash" %>
  </div>

  <%= render "form", todo: @todo %>

<% end %>

<div id="todos">
  <% @todos.each do |todo| %>
    <%= render todo %>
    <% if todo.user == current_user %>
      <div class="d-flex align-items-center justify-content-center">
        <button onclick="tweet(this)" data-text="テッテレー♪<%= todo.category %>「<%= todo.description %>」<%= todo.checked ? 'をクリアしました！' : 'にチャレンジします！' %>" class="btn btn-dark" style="height:50px; width:45px">𝕏</button>
      </div>
    <% end %>
  <% end %>
</div>

<div class="d-flex justify-content-center my-5">
  <%= paginate @todos, theme: "bootstrap-5" %>
</div>
